//- login page to allow user to login or link to page for new user to register
extends layout.pug

block scripts
  - var title = 'Login';
block content
  div.row.justify-content-md-center
    div.col-md-5
      div.d-flex.justify-content-between
        div: h1 User Login
        a(href="/Register"): button.btn.btn-secondary.btn-header: span:bi:bi-plus New User?
      div#userLoginForm
        form.row(method="post" action="/Login" enctype="application/x-www-form-urlencoded")
          div.mb-3
            label.form-label(for="username") Username
            input.form-control#username(type="text" name="username" required)
          div.mb-3
            label.form-label(for="password") Password
            input.form-control#password(type="password" name="password" required)
          if error
            div#alerts
              case error
                when 'userExists'
                  div.alert.alert-warning A user already exists with that username. Please log in or register with a different username.
          div.mb-3
            button.btn.btn-primary(type="submit") Submit

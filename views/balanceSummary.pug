//- landing page to display each account with currently available balance
extends layout.pug

block scripts
  - var title = 'Balance Summary';
block content
  div.d-flex.justify-content-between
    h1
      i(class="bi bi-house-door")
      |  Available Balances
    a(href="/CreateAccount"): button.btn.btn-primary.btn-header: span.bi.bi-plus New Account
  table.table.table-striped.table-responsive
    thead
      tr
        th Last Transaction Date
        th Account Name
        th Balance
        th Available Credit
    tbody
      each detail in accountDetails
        tr
          td #{detail.lastTxDate}
          td
            a(href='/AccountDetails/'+detail.accountId) #{detail.accountAdmin} #{detail.accountName}
          td $#{detail.balance}
          if detail.credit
            td $#{detail.credit}
          else
            td

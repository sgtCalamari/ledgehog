//- page to display specific account transactions and other details
head
  link(
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css",
    rel="stylesheet",
    integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We",
    crossorigin="anonymous"
  )
  link(
    rel="stylesheet",
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
  )
body
  div.container-fluid
    div
      a(href="/AccountDetails/" + accountId + "/CreateTransaction"): button(style="float: right; margin-top: 0.75em" class="btn btn-primary"): span.bi.bi-plus New Transaction
      h1
        span: a(href="/"): i(class="bi bi-arrow-left-circle")
        |  #{accountName} Summary
    hr
    h4 Transactions
    table.table.table-striped.table-responsive.table-hover
      thead
        tr
          th Date
          th Description
          th: a(href="/TransactionCategories") Category
          th Amount
      tbody
        if transactions
          each tx in transactions
            tr
              td: a(href="/AccountDetails/"+accountId+"/ModifyTransaction/"+tx.id) #{tx.date}
              td: strong #{tx.description}
              td #{tx.category}
              td $#{tx.amount}
    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js",
      integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj",
      crossorigin="anonymous"
    )
